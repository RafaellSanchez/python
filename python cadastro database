class cadastro(object):
    def __init__(self, primeironome, sobrenome, idade,CPF):
        self.primeironome = input('Digite o primeiro nome: ')
        self.sobrenome =    input('Digite o sobrenome    : ')
        self.idade =  float(input('Digite sua idade      : '))
        self.CPF =    float(input('Digite seu CPF        : '))
        
        self.nomecompleto = self.primeironome +  self.sobrenome 
        

    def Idade(self, idade):
        for n in range(False):
            if self.idade <= 17:
                print("Sua idade não é compativel com as diretrizes! Sr(a): ", self.nomecompleto)
                break

            elif self.idade > 17:
                print('Continue')

        
         
    def cadastroemail(self, email,senha):
        
    
